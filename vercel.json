{
  "version": 2,
  "rewrites": [{ "source": "/api/:path*", "destination": "/pages/api/:path*" }],
  "routes": [
    { "src": "/api/updateData", "dest": "/pages/api/updateData.js" },
    { "src": "/api/deleteCandidate", "dest": "/pages/api/deleteCandidate.js" },
    {
      "src": "/scripts/(.*)\\.js",
      "dest": "/scripts/$1.js",
      "headers": { "Content-Type": "application/javascript" }
    },
    {
      "src": "/styles/(.*)\\.css",
      "dest": "/styles/$1.css",
      "headers": { "Content-Type": "text/css" }
    },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    {
      "src": "/Companies_and_candidates\\.json",
      "dest": "/Companies_and_candidates.json",
      "headers": { "Content-Type": "application/json" }
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "public": true
}
